// Configuring tasks.json for C/C++ debugging 
// Available variables which can be used inside of strings.
// ${workspaceRoot}: the root folder of the team        
// ${file}: the current opened file                     
// ${fileBasename}: the current opened file's basename 
// ${fileDirname}: the current opened file's dirname    
// ${fileExtname}: the current opened file's extension  
// ${cwd}: the current working directory of the spawned process
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C++",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": [],
      "args": [
        "-Xclang",
        "-fopenmp",
        "--std=c++11",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-L/usr/local/lib",
        "-lomp"
      ],
      "osx": {
        "command": "g++"
      },
      "linux": {
        "command": "g++"
      },
      "windows": {
        "command": "mingw-g++"
      }
    },
    {
      "label": "build C",
      "type": "shell",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "args": [
        "--std=c11",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "osx": {
        "command": "gcc"
      },
      "linux": {
        "command": "gcc"
      },
      "windows": {
        "command": "mingw-gcc"
      }
    },
    {
      "type": "shell",
      "label": "C/C++: clang++ build active file",
      "command": "/Users/ghzuo/miniconda3/bin/clang++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    }
  ]
}